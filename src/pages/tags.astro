---
import BaseLayout from '../layouts/BaseLayout.astro';
import TagCloud from '../components/TagCloud.astro';
import { collectTags } from '../lib/tags';

const title = "Tags - All Topics";
const description = "Browse all topics and tags across blog posts and TIL entries.";

const tags = await collectTags();

// Group tags alphabetically into A-F, G-M, N-Z
const groups: Record<string, typeof tags> = { 'A - F': [], 'G - M': [], 'N - Z': [] };
for (const t of [...tags].sort((a, b) => a.tag.localeCompare(b.tag))) {
  const first = t.tag[0]?.toUpperCase() ?? '';
  if (first >= 'A' && first <= 'F') groups['A - F'].push(t);
  else if (first >= 'G' && first <= 'M') groups['G - M'].push(t);
  else groups['N - Z'].push(t);
}
---
<BaseLayout title={title} description={description}>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">All Tags</h1>
    <p class="text-gray-600">
      Explore content by topic. Click on any tag to see related posts and TIL entries.
    </p>
  </div>

  <!-- Dynamic Tag Cloud -->
  <div class="mb-12">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Popular Tags</h2>
    <TagCloud tags={tags} minSize={0.95} maxSize={1.9} />
  </div>

  <!-- Alphabetical Tag List (dynamic) -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {Object.entries(groups).map(([heading, list]) => (
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">{heading}</h3>
        {list.length ? (
          <ul class="space-y-2">
            {list.map(t => (
              <li>
                <a href={`/tags/${t.slug}`} class="text-gray-600 hover:text-gray-900 transition-colors">
                  {t.tag} ({t.count})
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-sm text-gray-500">No tags</p>
        )}
      </div>
    ))}
  </div>
</BaseLayout>
