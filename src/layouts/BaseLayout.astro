---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "A blog about daily thoughts and learning" } = Astro.props;

import { collectTags } from '../lib/tags';
const sidebarTags = await collectTags();
const sidebarTop = sidebarTags.slice(0, 6);
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900 antialiased">
    <div class="min-h-screen">
      <!-- Header -->
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-6">
            <div class="flex items-center">
              <h1 class="text-2xl font-bold text-gray-900">
                <a href="/" class="hover:text-blue-600 transition-colors">Mengkeat</a>
              </h1>
            </div>
            <nav class="hidden md:flex space-x-8">
              <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
              <a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors">Blog</a>
              <a href="/til" class="text-gray-600 hover:text-gray-900 transition-colors">TIL</a>
              <a href="/tags" class="text-gray-600 hover:text-gray-900 transition-colors">Tags</a>
              <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors">About</a>
            </nav>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          <!-- Main Content Area -->
          <div class="lg:col-span-3">
            <slot />
          </div>

          <!-- Sidebar -->
          <aside class="lg:col-span-1">
            <div class="sticky top-8 space-y-8">
              <!-- About Section -->
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">About</h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  Welcome to my blog where I share daily thoughts, learnings, and explorations in technology, science, and life.
                </p>
              </div>

              <!-- Popular Tags -->
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Popular Tags</h3>
                <div class="flex flex-wrap gap-2">
                  {sidebarTop.map(t => (
                    <a href={`/tags/${t.slug}`} class="inline-block bg-slate-100 text-slate-800 text-xs px-2 py-1 rounded-full hover:bg-slate-200 transition-colors">
                      {t.tag}
                    </a>
                  ))}
                </div>
              </div>

              <!-- Recent TIL -->
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent TIL</h3>
                <ul class="space-y-3">
                  <li>
                    <a href="/til/astro-tailwind-setup" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors">
                      Setting up Tailwind with Astro
                    </a>
                  </li>
                  <li>
                    <a href="/til/css-grid-tips" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors">
                      CSS Grid Layout Tips
                    </a>
                  </li>
                  <li>
                    <a href="/til/python-decorators" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors">
                      Python Decorators Explained
                    </a>
                  </li>
                </ul>
              </div>

              <!-- Archives -->
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Archives</h3>
                <ul class="space-y-2">
                  <li>
                    <a href="/archive/2025/08" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors">
                      August 2025 (5)
                    </a>
                  </li>
                  <li>
                    <a href="/archive/2025/07" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors">
                      July 2025 (8)
                    </a>
                  </li>
                  <li>
                    <a href="/archive/2025/06" class="block text-sm text-gray-600 hover:text-gray-900 transition-colors">
                      June 2025 (12)
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </aside>
        </div>
      </main>

      <!-- Footer -->
      <footer class="bg-white border-t border-gray-200 mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-gray-600 text-sm">
              Â© 2025 Mengkeat. All rights reserved.
            </p>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a href="https://github.com/mengkeat" class="text-gray-400 hover:text-gray-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                </svg>
              </a>
              <a href="https://twitter.com/mengkeat" class="text-gray-400 hover:text-gray-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
