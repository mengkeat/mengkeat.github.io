---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "A blog about daily thoughts and learning" } = Astro.props;

import { collectTags } from '../lib/tags';
const sidebarTags = await collectTags();
const sidebarTop = sidebarTags.slice(0, 6);
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <title>{title}</title>
  </head>
  <body class="bg-warm-50 text-stone-800 antialiased">
    <div class="min-h-screen">
      <!-- Header -->
      <header class="bg-white/80 backdrop-blur-sm border-b border-stone-200/60 sticky top-0 z-50">
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
          <div class="flex justify-between items-center py-6">
            <div class="flex items-center">
              <h1 class="text-2xl font-semibold text-stone-900 tracking-slight">
                <a href="/" class="hover:text-amber-700 transition-colors duration-200">Mengkeat</a>
              </h1>
            </div>
            <nav class="hidden md:flex space-x-8">
              <a href="/" class="text-stone-600 hover:text-stone-900 transition-colors duration-200 font-medium">Home</a>
              <a href="/blog" class="text-stone-600 hover:text-stone-900 transition-colors duration-200 font-medium">Blog</a>
              <a href="/til" class="text-stone-600 hover:text-stone-900 transition-colors duration-200 font-medium">TIL</a>
              <a href="/tags" class="text-stone-600 hover:text-stone-900 transition-colors duration-200 font-medium">Tags</a>
            </nav>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main class="max-w-4xl mx-auto px-6 lg:px-8 py-12">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="bg-white border-t border-stone-200/60 mt-24">
